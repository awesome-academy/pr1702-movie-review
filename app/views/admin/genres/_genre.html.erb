<h2><%= t ".all" %></h2>
<table class="table table-hover">
  <%= link_to t(".add"), {action: "new"}, class: "add-book btn btn-primary" %>
  <thead class="table-title">
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".pr" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.parent_id %></td>
        <td><%= link_to "Delete", [:admin, genre], method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
