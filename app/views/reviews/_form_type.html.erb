<%= form_for [@movie, @review] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :movie_id, value: @movie.id %>

  <div class="field">
    <%= f.label :rating %>
    <div id="star-rating"></div>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.cktext_area :content, rows: 10 %>
  </div>

  <div class="action">
    <%= f.submit t(".review") %>
  </div>
<% end %>
