<header class="site-header">
  <div class="container">
    <%= link_to root_path, id: "branding" do %>
      <%= image_tag "logo.png", class: "logo" %>
      <div class="logo-copy">
        <h1 class="site-title"><%= t ".title" %></h1>
        <small class="site-description"><%= t ".description" %></small>
      </div>
    <% end %>
    <div class="main-navigation">
      <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
      <ul class="menu">
        <li class="menu-item current-menu-item"><%= link_to t(".home"), root_path %></li>
        <% if current_user && current_user.admin? %>
          <li class="menu-item"><%= link_to t(".manage"), admin_movies_path %></li>
        <% end %>
        <li class="menu-item"><%= link_to t(".browse_movies"), movies_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: :dropdown} do %>
              <%= t ".account" %> 
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t(".logout"), destroy_session_path(current_user), method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class="menu-item"><%= link_to t(".login"), new_user_session_path %></li>
          <li class="menu-item"><%= link_to t(".register"), new_user_registration_path %></li>
        <% end %>
      </ul>
      <div class="search-form">
        <%= render "layouts/search" %>
      </div>
    </div>
    <div class="mobile-navigation"></div>
  </div>
</header>
