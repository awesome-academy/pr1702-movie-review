<% @reviews.each do |review| %>
  <div class="media">
    <div class="media-left">
      <%= link_to image_tag(review.movie.image), movie_path(review.movie), class: "media-movie thumbnail" %>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= review.movie.name %>
        <small><i><%= t ".posted" %> <%= (review.created_at).strftime("%B %e, %Y") %></i></small></h4>
      <div class="star-rating" data-score= <%= review.rating %> ></div>
      <h5><%= review.title %></h5>
      <div class="longtext">
        <div class="lesstext">
          <%= truncate strip_tags(review.content), length: Settings.reviews.cont_length %>
        </div>
        <div class="moretext">
          <span>
            <%= strip_tags(review.content) %>
          </span>
          <%= link_to t(".read_more"), "#", class: "links" %>
        </div>
      </div>
      <div class="interactive-review">
        <div class="inter-label">
          <h4><%= t ".liked" %> <span class="badge"><%= review.count_like_reviews %></span></h4>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="pagination">
  <%= will_paginate @reviews %>
</div>
