<% provide :title, t(".browse_movies") %>

<div class="breadcrumbs">
  <%= link_to t(".home"), root_path %>
  <span><%= t ".browse_movies" %></span>
</div>
<div class="filters">
  <%= form_tag movies_path, method: "get" do %>
    <%= select_tag :genre, options_for_select(@genres), prompt: t(".genres") %>
    <%= select_tag :release_year, options_for_select(@release_years), prompt: t(".years") %>
    <%= select_tag :user_rating, options_for_select(@ratings), prompt: t(".rating") %>
    <%= submit_tag t(".filter") %>
  <% end %>
</div>
<div class="movies">
  <%= render "movies" %>
</div>
